<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos mínimos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".core.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SplashParcial2"
        tools:targetApi="31">
        <!--
        Si en algún momento necesitas permitir HTTP (no recomendado), agrega:
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        y crea ese xml. Para Google Maps embed no es necesario.
        -->

        <!-- Splash: Activity lanzadora con tema de Splash -->
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.SplashParcial2.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Flujo de autenticación -->
        <activity
            android:name=".ui.auth.AuthActivity"
            android:exported="false" />

        <!-- Home -->
        <activity
            android:name=".ui.home.HomeActivity"
            android:exported="false" />

        <!-- Meta-datos de Google Maps (opcional si usas solo iframe) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <!-- Firebase usa estas marcas si las libs están en el proyecto -->
        <meta-data
            android:name="firebase_analytics_collection_enabled"
            android:value="true" />
    </application>

</manifest>