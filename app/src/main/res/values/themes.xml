<resources>
    <!-- Tema principal sin ActionBar -->
    <style name="Theme.SplashParcial2" parent="Theme.Material3.Light.NoActionBar">
        <!-- colores, etc -->
    </style>

    <!-- Tema para la Activity de Splash usando AndroidX SplashScreen -->
    <style name="Theme.SplashParcial2.Splash" parent="Theme.SplashScreen">
        <!-- Icono que aparece en el splash -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="windowSplashScreenBackground">@android:color/white</item>
        <!-- Tema que tomará la app después del splash -->
        <item name="postSplashScreenTheme">@style/Theme.SplashParcial2</item>
    </style>
</resources>