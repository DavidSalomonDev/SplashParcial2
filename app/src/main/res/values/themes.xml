<resources>

    <style name="Theme.SplashParcial2" parent="Theme.Material3.Light.NoActionBar">
        <!-- Asegurar que las barras del sistema sean visibles -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="Theme.SplashParcial2.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@drawable/splash_background</item>
        <item name="windowSplashScreenAnimatedIcon">@null</item>
        <item name="postSplashScreenTheme">@style/Theme.SplashParcial2</item>
        <!-- Barras del sistema visibles en splash -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>
</resources>